@Html.AntiForgeryToken()
<div class="modal fade" id="CadTarefa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Nova Tarefa</h4>
            </div>
            <div class="modal-body">
                <form>
                    @Html.Hidden("Id")

                    <div class="form-group">
                        <label for="LstListas">Lista de Tarefa:</label>
                        <select class="form-control" id="LstListas" name="LstListas"></select>
                    </div>

                    <div class="form-group">
                        <label for="Titulo">Tarefa</label>
                        <input type="text" class="form-control" id="TxtTitulo" placeholder="Tarefa" />
                    </div>

                    <div class="form-group">
                        <label for="Descrcao">Descrição</label>
                        <input type="text" class="form-control" id="TxtDescricao" placeholder="Descrição" />
                    </div>

                    <div class="form-group">
                        <label for="DataCriacao">Data Criação</label>
                        <input class="form-control text-box single-line" data-val="true" id="DpkDataCriacao" type="date" value="">
                    </div>

                    <div class="form-group">
                        <label for="DataConclusao">Data Conclusão</label>
                        <input class="form-control text-box single-line" data-val="true" id="DpkDataConclusao" type="date" value="">
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input id="chkConcluido" name="chkConcluido" class="form-check-input" type="checkbox">Tarefa concluida
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddTarefa" onclick="return AddTarefa();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdateTarefa" style="display:none;" onclick="UpdateTarefa();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>