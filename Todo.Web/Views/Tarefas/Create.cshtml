@model ToDo.Domain.Tarefas.Tarefa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrando uma Nova Lista";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            Registro de um Nova Lista
        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/Tarefas/_PartialEditContentPanel.cshtml", Model)
        </div>
        <div class="panel-footer panel-info">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Lista" class="btn btn-danger" />
                @Html.ActionLink("Retornar para as Lista", "Index", null, new { @class = "btn btn-warning" })
            </div>
            <br />
            <br />
        </div>
    </div>
}


@section ScriptPage {
    @Scripts.Render("~/bundles/jqueryval")
}
