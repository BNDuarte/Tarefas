@model ToDo.Domain.Tarefas.Tarefa
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando os dados de uma Lista";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes de uma Lista
    </div>
    <div class="panel-body">
        @Html.Partial("~/Views/Tarefas/_PartialDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liListas').addClass("active");
        });
    </script>
}
