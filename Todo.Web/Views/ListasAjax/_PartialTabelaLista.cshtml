@model List<ToDo.Domain.Listas.Lista>

<div id="DivTabelaPesquisa" class="table-overflow">

    <table id="grid_cadastro" class="table table-responsive-sm table-sm table-sm table-hover table-striped  @Html.Raw(Model.Count > 0 ? "" : "Ocultar")">
        <thead class="thead-light" align="center" style="position:static">
            <tr>
                <th scope="col">Título</th>
                <th scope="col">Observação</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr data-id="@item.Id" class="align-middle">
                    <td class="align-middle">@item.Nome</td>
                    <td class="align-middle">@item.Observacao</td>


                    <td class="align-middle">
                        <a class="btn btn-success btn-sm" id="BtnIncluir" role="button" data-toggle="tooltip" data-placement="top" title="Alterar Produto"><i class="fa fa-plus"></i></a>
                        <a class="btn btn-success btn-sm" id="BtnAlterar" role="button" data-toggle="tooltip" data-placement="top" title="Alterar Produto"><i class="fa fa-pencil"></i></a>
                        <a class="btn btn-success btn-excluir btn-sm" role="button" data-toggle="tooltip" data-placement="top" title="Excluir Produto"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
